{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "resources/js/*"
      ]
    }
  },
  "include": [
    "resources/js/**/*.tsx",
    "resources/js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
